{% extends 'base.html.twig' %}

{% block title %} Nos produits - Dev Soluces!{% endblock %}

{% block content %}
<div class="row">
    <div class="col-md-3">
        <h3>Filtrer</h3>
        {{ form(form) }}

    </div>
    <div class="col-md-9">

        
<H3>Nos produits</H3>

<div class="row product-container">
    {% for product in products %}
        <div class="col-md-4">
                <div class="product-item text-center">
                    <a href="{{ path('app_product', {'slug' : product.slug } ) }}"><img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid"></a>
                    <h5>{{ product.name }}</h5>
                    <span class="product-subtitle">{{ product.subtitle }}</span>
                    <span class="product-price">{{ (product.price / 100)|number_format(2, ',','.' ) }} â‚¬</span><br/>
                    <br>
                    <a href="{{ path('app_add_to_cart', { 'id' : product.id}) }} " class="btn btn-primary">Ajouter au panier</a>

                </div>
        </div>
     {% endfor %} 
</div>
    </div>

</div>

    


{% endblock %}
